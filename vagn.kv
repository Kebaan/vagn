#:kivy 1.0
#:import label kivy.uix.label
#:import lw kivy.uix.listview
#:import la kivy.adapters.listadapter
#:import sla kivy.adapters.simplelistadapter

[SongListItem@BoxLayout]:
    height: ctx.height

    Label:
        size_hint_x: 0.6
        text: ctx.text

    Button:
        size_hint_x: 0.2
        text: "up"
        on_press: app.move_song(ctx.id) 
    
    Button:
        size_hint_x: 0.2
        text: "rm"
        on_press: app.remove_song(ctx.id) 

<MusicWidget>:
    song_list: song_list
    
    Button:
        size_hint: 0.1, 1
        text: "Volume"

    BoxLayout:
        orientation: "vertical"

        Button:
            size_hint: 1, 0.1
            text: "search" 
        
        ListView:
            id: song_list
        
        BoxLayout:
            size_hint: 1, 0.2
            text: "control" 

            Button:
                text: "OMW"
                on_press: app.add_song('On My Way')

            Button:
                text: "SSS"
                on_press: app.add_song('3xS')

            Button:
                text: "Play"

            Button:
                text: "Exit"
                on_press: app.exit()
    Button:
        size_hint: 0.1, 1
        text: "Power" 
